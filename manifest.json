{
  "manifest_version": 3,
  "name": "Đức Chung",
  "version": "1.0",
  "description": "Tự động trích xuất dữ liệu từ trang web và tải về",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "notifications",
    "downloads",
    "downloads.open"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/UI/popup.html",
    "default_icon": "access/banhTrung.png"
  },
  "background": {
    "service_worker": "backgrounds/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup/js/formBot.js",
        "popup/popup.html",
        "popup/UI/formBot.html"
      ],
      "matches": ["*://*/*"]
    }
  ]
}
